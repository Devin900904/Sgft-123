<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Silver"
    android:orientation="vertical"
    android:padding="@dimen/Spacing">


    <ScrollView
        android:layout_width="388dp"
        android:layout_height="474dp"
        android:layout_below="@+id/m0403_b001"
        android:layout_alignEnd="@+id/m0403_b001"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/Gray"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/m0403_t002"
                android:textColor="@color/Black"
                android:textSize="@dimen/fontsize"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/m0403_chb01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Gray"
                android:buttonTint="@color/Navy"
                android:checked="true"
                android:text="@string/m0403_chb01"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />

            <CheckBox
                android:id="@+id/m0403_chb02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Gray"
                android:buttonTint="@color/Navy"
                android:checked="true"
                android:text="@string/m0403_chb02"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />

            <CheckBox
                android:id="@+id/m0403_chb03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Gray"
                android:buttonTint="@color/Navy"
                android:checked="true"
                android:text="@string/m0403_chb03"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/m0403_b002"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/m0403_b002"
        android:textColor="@color/Blue"
        android:textSize="@dimen/fontsize"
        android:textStyle="bold" />


</LinearLayout>