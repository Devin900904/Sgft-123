<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Silver"
    android:orientation="vertical"
    android:padding="@dimen/Margins"
    tools:context=".M0400">

    <Button
        android:id="@+id/m4000_b001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/btn_default"
        android:text="@string/m0400_b001"
        android:textColor="@color/Yellow"
        android:textSize="@dimen/fontsize"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/m0400_t001"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/m4000_b001"
        android:layout_alignStart="@+id/m4000_b001"
        android:layout_marginTop="@dimen/Spacing"
        android:background="@color/White"
        android:text="@string/m0400_t001"
        android:textColor="@color/Black"
        android:textSize="@dimen/fontsize"
        android:textStyle="bold"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/m0400_b002"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/m4000_b001"
        android:layout_marginTop="@dimen/Margins"
        android:layout_toEndOf="@+id/m0400_t001"
        app:srcCompat="@android:drawable/ic_menu_search"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <ScrollView
        android:layout_width="388dp"
        android:layout_height="404dp"
        android:layout_below="@+id/m0400_t001"
        android:layout_alignStart="@+id/m0400_t001"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/Margins"
        android:background="@color/Gray"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/m0400_t002"
                android:textColor="@color/Blue"
                android:textSize="@dimen/fontsize"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/m0401_chb01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Gray"
                android:buttonTint="@color/Navy"
                android:checked="true"
                android:text="@string/m0400_chb01"
                android:textSize="30sp"
                tools:ignore="TouchTargetSizeCheck" />

            <CheckBox
                android:id="@+id/m0401_chb02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Gray"
                android:buttonTint="@color/Navy"
                android:checked="true"
                android:text="@string/m0400_chb02"
                android:textSize="30sp"
                tools:ignore="TouchTargetSizeCheck" />

            <CheckBox
                android:id="@+id/m0401_chb03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Gray"
                android:buttonTint="@color/Navy"
                android:checked="true"
                android:text="@string/m0400_chb03"
                android:textSize="30sp"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/m0400_b003"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="529dp"
        android:text="@string/m0400_b003"
        android:textColor="@color/Black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/m0400_b004"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/m0400_t001"
        android:layout_alignTop="@+id/m0400_b003"
        android:layout_marginTop="-1dp"
        android:text="@string/m0400_b000"
        android:textColor="@color/Black"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>